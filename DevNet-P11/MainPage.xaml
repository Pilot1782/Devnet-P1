<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevNet_P11.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            x:Name="ThisStackLayout"
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Basic Address Searching"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Editor
                x:Name="AddressInput"
                IsReadOnly="False"
                Placeholder="Enter addresses, seperated by a newline (press Enter)..."
                AutoSize="TextChanges"
            />

            <Button
                Text="Click to Run"
                x:Name="RunButton"
                SemanticProperties.Hint="Retrieves Address Data"
                Clicked="OnRunClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>