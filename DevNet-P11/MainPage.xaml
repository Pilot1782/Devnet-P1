<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevNet_P11.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Basic Address Searching!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Editor
                x:Name="AddressInput"
                IsReadOnly="False"
            />

            <Button
                Text="Click to Run"
                SemanticProperties.Hint="Retrieves Address Data"
                Clicked="OnRunClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="StatusAddress"
                Text="[Address]" />


            <ProgressBar
                x:Name="ProgressLabel"
                Progress="0" />

            <Label
                  x:Name="DebugLabel"
                  Text="" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>